<?xml version="1.0" encoding="utf-8"?>
<kehuafu.cn.tools.custom.MyRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.home.activity.MainActivity">

    <!--引入外部共享布局-->
    <include
        layout="@layout/layout_common_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true" />

    <kehuafu.cn.tools.custom.RoundImageView
        android:id="@+id/mine_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/click_tv"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:scaleType="fitXY"
        android:src="@drawable/wx_mine"
        app:type="round" />

    <TextView
        android:id="@+id/click_tv"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:background="@color/colorDefault"
        android:gravity="center"
        android:text="点击" />

    <Button
        android:id="@+id/my_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/click_tv"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="button"
        tools:ignore="HardcodedText" />

    <kehuafu.cn.tools.custom.MyTextView
        android:id="@+id/test_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_btn"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="记录世界记录你" />

    <!--<ImageView-->
