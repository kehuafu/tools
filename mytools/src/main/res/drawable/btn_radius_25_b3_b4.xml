<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <corners android:radius="@dimen/space_25" />
            <gradient android:angle="0" android:endColor="@color/color_b4_dark" android:startColor="@color/color_b3_dark" android:type="linear" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="0" android:endColor="@color/color_b4_dark_70" android:startColor="@color/color_b3_dark_70" android:type="linear" />
            <corners android:radius="@dimen/space_25" />
        </shape>
    </item>
</selector>